---
const { data } = Astro.props;
---

<a href={`testimonials/${data.slug}`}>
  <div class="textbox">
    <p class="citat">
      "{data.testimonial}"
    </p>
    <p class="name">{"- " + data.fornavn + " " + data.efternavn}</p>
  </div>
</a>
<style>
  a {
    text-decoration: none;
  }

  img {
    width: 25px;
    margin: 25px 0px 0px 0px;
  }
  .textbox {
    background-image: linear-gradient(140deg, #3c3838, transparent);
    margin: 5%;
    border-radius: 20px;
    color: #d1b192;
    padding: 0.5rem;
  }

  .name {
    font-size: 1.1rem;
  }
  .citat {
    font-style: italic;
    padding: 20px;
    font-size: 1.4rem;
  }
</style>
